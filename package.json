{
	"name": "talec-table",
	"version": "1.2.2",
	"description": "Build customizable table for react native",
	"main": "index.js",
	"scripts": {
		"lint": "eslint .",
		"build": "babel src -d dist",
		"test": "jest --coverage --reporters=default jest-html-reporter"
	},
	"jest": {
		"testMatch": [
			"**/*.test.js"
		],
		"testEnvironment": "jsdom",
		"reporters": [
			"default",
			[
				"jest-html-reporter",
				{
					"pageTitle": "My Test Report"
				}
			]
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TangiLC/talec-table.git"
	},
	"keywords": [
		"react-native-component",
		"table",
		"sort-column",
		"pagination",
		"custom-table",
		"custom-style",
		"custom-actions"
	],
	"author": "TaLec",
	"license": "MIT",
	"homepage": "https://github.com/TangiLC/talec-table#readme",
	"devDependencies": {
		"@babel/cli": "^7.24.1",
		"@babel/core": "^7.24.4",
		"@babel/preset-env": "^7.24.4",
		"@babel/preset-react": "^7.24.1",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^14.2.2",
		"eslint": "^8.57.0",
		"eslint-plugin-react": "^7.34.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-html-reporter": "^3.10.2"
	},
	"dependencies": {
		"babel": "^6.23.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
}
